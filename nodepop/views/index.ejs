<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/pico.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="shortcut icon" href="/images/nodepopIcon.png" type="image/x-icon">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <h2>Catálogo</h2>
    <main class="container">
      <% if (error) {%>
        <div class="error">
          <p><%= error %></p>
        </div>
      <% } else { %>
        <% anuncios.forEach(anuncio => {%>
        <div class="producto">
          <h5 id="nombre"><%= anuncio.nombre %></h5>
          <% if (anuncio.venta) { %> <p>Se vende</p> <% } 
          else { %> <p>Se compra</p> <%}  %> 
          <p id="tags">Categoria: <% anuncio.tags.forEach(tag => {%>
          <span> "<%= tag %>"</span>  <%}) %></p>
          <p id="precio">Precio: <%= anuncio.precio %>€</p>
          <img src="/images/<%=anuncio.foto %>" alt=<%= anuncio.nombre %>>
        </div>
        <%}) %>
      <%} %> 
    </main>
  </body>
</html>
